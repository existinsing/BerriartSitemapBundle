<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{% for page in range(1, pages) %}
    <sitemap>
        {% if dump %}
        <loc>{{ url|format(page)|berriart_sitemap_absolutize }}</loc>
        {% else %}
        <loc>{{ url('berriart_sitemap_paginated', {'page': page}) }}</loc>
        {% endif %}
        {% if lastmod %}
        <lastmod>{{ lastmod.format('c') }}</lastmod>
        {% endif %}
    </sitemap>
{% endfor %}
</sitemapindex>